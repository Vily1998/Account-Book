<?xml version="1.0" encoding="utf-8"?>
<!--资产转账页面中弹出框的item布局-->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_white">

    <!--卡片布局，有圆角-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/item_assets_transfer_dialog_list_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/assets_cash"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

            <TextView
                    android:id="@+id/item_assets_transfer_dialog_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:text="工资薪水"/>

            <TextView
                    android:id="@+id/item_assets_transfer_dialog_list_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/color_shallow_gray"
                    android:text="我的工资"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical">

            <TextView
                    android:id="@+id/item_assets_transfer_dialog_list_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:text="0.00"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>