<?xml version="1.0" encoding="utf-8"?>
<!--记一笔的收入页面-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/fragment_index_record_in_money"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="60dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="金额"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical">

            <EditText
                    android:id="@+id/fragment_index_record_in_money_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:background="@null"
                    android:inputType="number|numberDecimal"
                    android:hint="0.00"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/fragment_index_record_in_remark"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="60dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="备注"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical">

            <EditText
                    android:id="@+id/fragment_index_record_in_remark_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:background="@null"
                    android:hint="请输入备注"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/fragment_index_record_in_date"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="60dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="选择日期"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical">

            <TextView
                    android:id="@+id/fragment_index_record_in_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/color_black"
                    android:textSize="18sp"
                    android:text=""/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
            android:id="@+id/fragment_index_record_in_assets"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="60dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="选择账户"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical">

            <TextView
                    android:id="@+id/fragment_index_record_in_assets_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/color_black"
                    android:textSize="18sp"
                    android:text=""/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_index_record_in_place"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="60dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_black"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:text="地址"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/fragment_index_record_in_place_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:background="@null"
                android:hint="请输入地址"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
    android:id="@+id/weixinLayout"
    android:layout_width="match_parent"
    android:layout_height="240dp"
        android:layout_margin="5dp"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:textColor="@color/color_black"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:text="图片上传"/>


    <ImageView
        android:id="@+id/head_image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/wechat" />
</RelativeLayout>

    <LinearLayout
            android:id="@+id/fragment_index_record_in_category"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
        android:layout_height="60dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="选择分类"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center_vertical">

            <ImageView
                    android:id="@+id/fragment_index_record_in_category_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_index_record_in_add_image_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_margin="6dp" />

    <Button
            android:id="@+id/fragment_index_record_in_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/colorPrimary"
            android:text="保存"
            android:textColor="@color/color_black"
            android:textSize="20sp" />

</LinearLayout>
</ScrollView>